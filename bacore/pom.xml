        <dependency>
            <groupId>org.apache.tika</groupId>
            <artifactId>tika-core</artifactId>
            <version>${tika.version}</version>
        </dependency>

        <!-- added for QRCODE start -->
        <!-- https://mvnrepository.com/artifact/com.google.zxing/core -->
