        </dependency>

        <!-- httpcore-->
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpcore</artifactId>
            <version>4.4.9</version>
        </dependency>
        <!-- depend on httpclient-->
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
